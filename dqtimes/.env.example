# ===============================================
# DQTimes API Configuration
# ===============================================
# Copie este arquivo para .env e ajuste os valores

# ========== API Settings ==========
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# ========== JWT Authentication ==========
# IMPORTANT: Generate a secure secret key for production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_secret_key_here_generate_a_new_one_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ========== Database (Future Implementation) ==========
# DATABASE_URL=postgresql://user:password@localhost/dqtimes
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ========== File Upload Limits ==========
MAX_FILE_SIZE_MB=10
MAX_PROJECTIONS=365
MIN_DATA_POINTS=10

# ========== Processing Configuration ==========
PARALLEL_PROCESSING=true
DASK_WORKERS=4
USE_CUDA=auto  # auto, true, false

# ========== Rate Limiting ==========
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========== Logging ==========
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/var/log/dqtimes/api.log
LOG_FORMAT=json  # json or text

# ========== CORS Settings ==========
CORS_ORIGINS=*  # In production, specify allowed origins
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ========== Cache (Future Implementation) ==========
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL_SECONDS=3600

# ========== Monitoring (Future Implementation) ==========
# SENTRY_DSN=your_sentry_dsn_here
# ENABLE_METRICS=true
# METRICS_PORT=9090
